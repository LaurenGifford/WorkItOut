<h1>
    <%= image_tag "WorkoutIcon.svg", class: "model-icon" %>
    Create a new workout
</h1>

<% if flash[ :messages ] %>
    <ul>
    <% flash[ :messages ].each do | error_message | %>
        <li style="color:red;"><%= error_message %></li>
    <% end %>
    </ul>
<% end %>

<div class="imput-group">
    <%= form_for @new_workout do | f | %>
     <div class="input-group-prepend">
        <%= f.label :client_id, class: 'input-group-text'%>
        <%= f.collection_select :client_id, Client.where( coach_id: session[ :id ] ), :id, :name, class: 'form-control' %>
    </div>
    <div class="input-group-prepend">
        <%= f.label :name, "New workout name:", class: 'input-group-text' %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="input-group-prepend">
        <%= f.label :length, "Length (in mins.):", class: 'input-group-text' %>
        <%= f.number_field :length, class: 'form-control' %>
    </div>
    <%= f.submit "Create Workout", class: 'btn-primary'%>
    <% end %>
</div>