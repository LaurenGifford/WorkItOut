<h1>Log in as a coach and start working it out!</h1>

<% if flash[ :messages ] %>
    <ul>
    <% flash[ :messages ].each do | error_message | %>
        <li style="color:red;"><%= error_message %></li>
    <% end %>
    </ul>
<% end %>

<div class="input-group">
    <%= form_tag "/coach_login", method: "post" do %>
            <div class="input-group-prepend">
                <%= label_tag :name, "Coach Name: ", class: 'input-group-text' %>
                <%= text_field_tag :name, {}, class: 'form-control' %>
            </div>
            <div class="input-group-prepend">
                <%= label_tag :password, "Enter Password: ", class: 'input-group-text' %>
                <%= password_field_tag :password, {}, class: 'form-control' %>
            </div>
            <div class="input-group-prepend">
                <%= label_tag :password_confirmation, "Confirm Password: ", class: 'input-group-text' %>
                <%= password_field_tag :password_confirmation, {}, class: 'form-control' %>
            </div>
            <%= submit_tag "Log in coach", class: 'btn-primary' %>
    <% end %>
</div>
