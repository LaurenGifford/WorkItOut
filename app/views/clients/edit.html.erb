<h1>
    <%= image_tag "ClientIcon.svg", class: "model-icon" %>
    Edit <%= @client.name %>'s profile
</h1>
<% if flash[ :messages ] %>
    <ul>
    <% flash[ :messages ].each do | error_message | %>
        <li style="color:red;"><%= error_message %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @client do | f | %>
    <%= f.label :name, "Enter a new username:" %>
    <%= f.text_field :name %><br /><br />
    <%= f.label :password, "Update your password:" %>
    <%= f.password_field :password %><br /><br />
    <%= f.label :password_confirmation, "Confirm your updated password:" %>
    <%= f.password_field :password_confirmation %><br /><br />
    <%= f.label :coach_id, "Select a new coach:" %>
    <%= f.collection_select :coach_id, Coach.all, :id, :name %><br /><br />
    <%= f.label :birthday, "Select a new birthday:" %>
    <%= date_select :client, :birthday, start_year: Date.current.year, end_year: 1920 %><br /><br />
    <%= f.label :avatar, "New avatar URL" %>
    <%= f.text_field :avatar %><br /><br />
    <%= f.label :bio, "Update your bio:" %><br />
    <%= f.text_area :bio %><br /><br />
    <%= f.submit %>
<% end %>

